/* --------------------------------------------------------------------*/
/* Header bar */
#hcontainer {
	position: fixed;
	width: 100%;
	top:0;
	margin:0;
	padding:0;
	text-align: center;
	z-index: 10;
	font-family: {{ theme_head_font_family }};
}

div.headercolor {
	position:fixed;
	top:0;
	height: {{ theme_head_height }}mm;
	width: 100%;
	background-color:{{ theme_main_color_bold }};
}

div.hpositioner {
	position: relative;
	max-width: {{ page_width }}mm;
	margin: 0 auto;
	height:100%;
}

div.header {
	position: relative;
	height: 100%;
	font-size: 1em;
	color: white;
	display: inline-block;
	text-align: left;
}

div.header > * {
	float:left;
}

.menu, #nav_positioner{
	position:relative;
	display: block;
	height: 100%;
	margin:0;
}
.menu {
	height: {{ theme_head_height }}mm;
}
#nav_positioner {
	position: fixed;
	top: 0;
	height: 100%;
	left: 50%;
}

#nav {
	position:absolute;
	right:-{{ page_width|float * 0.5 }}mm;
	top:0;
	text-align: left;
	white-space: nowrap;
	max-height:100%;
	min-height:{{ theme_head_height }}mm;
	min-width :6em;
	padding: {{ theme_head_height }}mm 12px 0 5px;
	box-sizing: border-box;
}
#nav_button {
	position:absolute;
	right:0;
	cursor:pointer;
	text-align: center;
	background-color: #eee;
	border-right: 1px solid #aaa;
	border-left: 1px solid #aaa;
	border-bottom: 1px solid #aaa;
	border-bottom-left-radius: 4px;
	border-bottom-right-radius: 4px;
	margin-right:12px;
	padding:0.2em 1em;
	font-size:80%;
	z-index:10;
}
#nav_button.pushed {
	display:none;
}
#nav_list {
	display:none;
	background-color: transparent;
	position: relative;
}
#nav_list > ul a {
	padding:0.3em 1em;
}
#nav_title {
	line-height: {{ theme_head_height |float *0.8 }}mm;
	border-left: 1px solid #aaa;
	border-right: 1px solid #aaa;
	background-color: #eee;
	padding: 0 1em;
	font-weight: bold;
	font-size:120%;
	position: relative;
}
#nav_title > a {
	color: #444;
}
#nav_list > ul {
	position: relative;
	right:0;
	background-color: #eee;
	border-left: 1px solid #aaa;
	border-right: 1px solid #aaa;
	border-bottom: 1px solid #aaa;
	border-bottom-left-radius: 4px;
	border-bottom-right-radius: 4px;
}


.menuButton {
	cursor:pointer;
	padding: 0 2em;
	line-height: {{ theme_head_height }}mm;
	height: 100%;
}

.menuButton > span {
	font-size: {{ theme_head_height|float * 0.48 }}mm;
}

.menuButton.pushed {
	background-color: {{ theme_main_color_med }};
}

.menu > div + div {
	font-size: 1em;
	position: absolute;
	left:-1px;
	top: {{ theme_head_height }}mm;
	white-space: nowrap;
	min-width: 40mm;
	-moz-box-shadow: 0 6px 12px rgba(0,0,0,0.175);
	-webkit-box-shadow: 0 6px 12px rgba(0,0,0,0.175);
	box-shadow: 0 6px 12px rgba(0,0,0,0.175);
}

.menu div.toctree-smilei {
	border-left:   1px solid {{ theme_main_color_bold }};
	border-right:  1px solid {{ theme_main_color_bold }};
	border-bottom: 1px solid {{ theme_main_color_bold }};
	border-bottom-left-radius:  4px;
	border-bottom-right-radius: 4px;
}

.menu a {
	padding: 0.4em 1em !important;
}

#smallScreenMenuButton {
	width: {{ theme_head_height|float * 1.2 }}mm;
	height:{{ theme_head_height }}mm;
	cursor:pointer;
	float:right;
	text-align: center;
	display:none;
	user-select: none;
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
}

#smallScreenMenuButton svg, #nav_button svg {
	width: {{ theme_head_height }}mm;
	height:{{ theme_head_height }}mm;
	margin:0 auto;
}

#smallScreenMenuButton.pushed {
	background-color: {{ theme_main_color_pale }};
}

#smallScreenMenuButton.pushed svg g {
	fill:{{ theme_main_color_bold }} !important;
}

#smallScreenMenu {
	width: 100%;
	position:fixed;
	top:{{ theme_head_height }}mm;
	bottom:0;
	left:0;
	padding:0.3em 0 0 0;
	overflow-y: auto;
	background-color:{{ theme_main_color_pale }};
	border: 0;
	z-index:500;
}

#smallScreenMenu > div {
	padding-bottom: 2em;
}

.on {
	display:block;
}

.off {
	display:none;
}

/* --------------------------------------------------------------------*/
/* Color styles that are used in tags :red: or :blue: */
.blue {
	color:blue;
}
.red {
	color:red;
}
.purple {
	color:#6967AB;
}
.green {
	color:green;
}
.orange {
	color:orange;
}

/* --------------------------------------------------------------------*/
/* Style for the "In progress" block */
.inprogress {
	text-align:center;
	padding:5px;
	margin:0 30%;
	background-color: {{ theme_main_color_pale }};
	border: 1px solid {{ theme_main_color_bold }};
}

/* Style for an emphasized link */
.emphlink {
	text-align:center;
	font-size:1.3em;
}

/* --------------------------------------------------------------------*/
/* Prevent tables to wrap lines */
table.nowrap {
	white-space: nowrap;
}
/* Remove bottom margin in table cells with line-blocks */
table.docutils div.line-block {
	margin-bottom:0;
}

table.noborder, table.noborder td {
	border:0 !important;
	-moz-box-shadow: none;
	-webkit-box-shadow: none;
	box-shadow: none;
}
/* Make nicer table header */
table.docutils thead {
	background-color: {{ theme_main_color_pale }};
}

/* --------------------------------------------------------------------*/
/* Logos and icons */
img.logo {
	height:{{ theme_head_height }}mm;
}
.icon {
	display:inline-block;
	text-align:center;
	margin:0.3em;
	width:100px;
}
.icon * {
	margin:0 auto;
	display:block;
}
.icon img {
	height:3em;
}
.icon, .icon:hover {
	text-decoration:none;
	color:#333;
}
.icon:hover {
	background-color:{{ theme_main_color_pale }};
}
.icon:active {
	background-color:{{ theme_main_color_med }};
}

/* --------------------------------------------------------------------*/
/* Styles for the lab logos container */
div.lablogos {
	border:0px solid #555;
}
div.lablogos > br.clear {
	clear:both;
}
div.lablogos > div {
	padding:5px;
	float:left;
}

/* --------------------------------------------------------------------*/
/* table of contents */
div.toctree-smilei {
	background-color: {{ theme_main_color_pale }};
	font-weight:normal;
}

div.toctree-smilei a {
	text-decoration: none;
	border:0 !important;
	color: black;
	display:block;
}
div.toctree-smilei > ul {
	margin: 0;
	list-style: none;
}
div.toctree-smilei > ul > li {
	margin: 0;
	padding: 0;
}
div.toctree-smilei > ul > li > a  {
	background-color: {{ theme_main_color_bold }};
	color: {{ theme_main_color_pale }};
	padding: 0.4em 0 0.4em 1em;
}
div.toctree-smilei li.outer > a {
	background-color: transparent;
	color: {{ theme_main_color_bold }};
}
div.toctree-smilei li.outer > a:hover {
	background-color: {{ theme_main_color_med }};
	color: {{ theme_main_color_pale }};
}
div.toctree-smilei > ul > li > ul {
	margin: 0;
	list-style: none;
}
div.toctree-smilei > ul > li > ul > li > a {
	padding:0.3em 0 0.3em 2.5em;
}
div.toctree-smilei > ul > li > ul > li > a:hover {
	background-color: #ddd;
}

div.toctree-smilei > ul > li > ul > li > ul {
	display:none;
}

/* --------------------------------------------------------------------*/
/* Some tricks for the citations */
/* Remove the weird shadows */
table.docutils.citation, table.docutils.citation * {
	-moz-box-shadow: none;
	-webkit-box-shadow: none;
	box-shadow: none;
}
/* Remove the back-reference links when there are several back-references */
table.citation td.label + td > em {
	display:none;
}
table.citation td.label + td ol {
	margin-top: 0 !important;
}
/* Remove the back-reference link when there is one back-reference */
table.citation td.label a {
	pointer-events: none;
	cursor: default;
	text-decoration: none;
	color: inherit;
}
/* Make a "bigcitation" class for citations with several lines */
table.bigcitation td.label {
	max-width: 3px;
}
table.bigcitation td.label + td {
	padding-top: 25px;
}

/* --------------------------------------------------------------------*/
/* Adjust code blocks */
dl pre, blockquote pre, li pre {
	margin-left:0;
}
div.highlight > pre {
	padding-left:0.3em;
}

/* --------------------------------------------------------------------*/
/* Adjust horizontal lines */
hr {
	margin-top:1em;
	border-color: {{ theme_main_color_bold }};
}
.toctree-smilei hr {
	margin: 0.2em 0;
	background: {{ theme_main_color_bold }} !important;
	width:100% !important;
}

/* --------------------------------------------------------------------*/
/* titles */
h1, h2, h3, h4, h5, h6 {
	color: {{ theme_main_color_bold }};
	font-weight:bold !important;
}
.section {
	padding-top:{{ theme_head_height | float * 0.5 }}mm;
	margin-top:-{{ theme_head_height }}mm;
}

/* --------------------------------------------------------------------*/
/* Smaller admonition box */
div.admonition {
	padding:7px !important;
	margin:2px 30px !important;
	background-color: {{ theme_main_color_pale }};
	border: 1px solid {{ theme_main_color_bold }};
	overflow: hidden;
}
div.admonition p.admonition-title {
	font-size: 18px;
	font-weight: bold;
	margin:0;
	float: inherit;
}
div.admonition p {
	margin:5px 0;
	float: right;
}

/* --------------------------------------------------------------------*/
/* Adjust figure */
.figure {
	text-align:center;
}
.caption-number {
	margin-right:8px;
	padding-right:4px;
	border-right:1px solid #BBB;
}
.caption {
	margin-top:0;
	margin-bottom:0;
}
.image-reference, table.noborder td:first-child > .reference {
	border-bottom:0 !important;
}

.c1 {
	color: #aab8c1 !important;
}

/* --------------------------------------------------------------------*/
/* Index */

.siteindex {
	width:100%;
	text-align:center;
}
.siteindex > div {
	display:inline-block;
	text-align:left;
}

@media print
{
	#hcontainer { display: none !important; }
}

/* --------------------------------------------------------------------*/
/* Search box */

#searchicon, #closesearchicon {
	width:{{ theme_head_height }}mm;
	text-align: center;
	cursor:pointer;
}
#searchicon > svg, #closesearchicon > svg {
	height:{{ theme_head_height }}mm;
}
#searchbox {
	position: absolute;
	right:{{ theme_head_height }}mm;
	height:{{ theme_head_height }}mm;
}
#searchinput {
	height:{{ theme_head_height|float * 0.6 }}mm;
	width: 80mm;
	font-size: 1em;
	padding:{{ theme_head_height|float * 0.1 }}mm 0.6em;
	margin:{{ theme_head_height|float * 0.1 }}mm 0;
	border-radius:0.5em;
	border:0;
	color: #555;
	background-color: white;
}
#search-results {
	padding-top: 5px;
}



@media screen and (max-width:  {{ page_width | float * 1.01 }}mm) {

	body, div.documentwrapper, .bodywrapper {
		margin:0;
	}
	
	ul {
		margin-left: 0;
	}
	
	.document {
		width: auto !important;
	}
	
	.footer {
		width: auto;
	}
	
	.github, .rtd_doc_footer {
		display: none;
	}
	
	div.documentwrapper {
		float: none;
		background: white;
	}
	
	div.sphinxsidebar h3, div.sphinxsidebar h4, div.sphinxsidebar p,
	div.sphinxsidebar h3 a {
		color: white;
	}
	
	div.document {
		margin: {{ theme_head_height }}mm 0 0 0;
		padding: 0 1em 1em 1em;
	}
	
	div.body {
		min-height: 0;
		padding: 0;
	}
	
	div.header {
	   display:block;
	}
	#smallScreenMenuButton {
		display: block !important;
	}
	.menu, #nav {
		display: none;
	}
	#searchicon, #closesearchicon {
		display:none !important;
	}
	#searchbox {
		display:block !important;
		left:{{ theme_head_height|float * 2.8 }}mm;
		right:{{ theme_head_height|float * 1.9 }}mm;
	}
	#searchinput {
		display:block !important;
		width:100%;
	}
}


@media screen and (min-width: {{ page_width | float * 1.01 }}mm) {
	#smallScreenMenu {
		display: none !important;
	}
}

